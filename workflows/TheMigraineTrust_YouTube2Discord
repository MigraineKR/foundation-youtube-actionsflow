name: Send a Discord message when new Youtube videos update
on:
  youtube:
    channel_id:
      - UCvrJXbZRQdBL5Zrl6iTrGjA
jobs:
  discord:
    name: Send a message to discord
    runs-on: ubuntu-latest
    steps:
      - name: Discord notification
        env:
          DISCORD_WEBHOOK: ${{ secrets.DISCORD_WEBHOOK_DISORDERS }}
          DISCORD_USERNAME: ${{ secrets.DISCORD_USERNAME_DISORDERS }}
          DISCORD_AVATAR: ${{ secrets.DISCORD_AVATAR_DISORDERS }}
        uses: Ilshidur/action-discord@master
        with:
          args: "`Migraine Disorders - YouTube`'\n'**${{on.youtube.outputs.title}}**'\n'${{on.youtube.outputs.link}}"
